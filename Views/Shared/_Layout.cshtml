<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="icon" type="image/png" href="~/images/icons/favicon.ico" />
    @*<link rel="stylesheet" href="/fonts/font-awesome-4.7.0/css/font-awesome.min.css" />
        <link href="~/fonts/font-awesome-4.7.0/css/font-awesome.min.css" rel="stylesheet" />
        <link rel="stylesheet" href="~/fonts/iconic/css/material-design-iconic-font.min.css" />*@

    <title>@ViewBag.Title - Peliculas</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        .navbar-inverse {
            background-color: #3A3E5A;
            border-color: #080808;
        }


        .sombras {
            box-shadow: 2px 2px 2px 1px rgba(0, 0, 0, 0.2);
        }
    </style>

</head>
<body style="background-color:#efeded;" class="pt-0">
    <nav class="navbar navbar-expand-lg navbar-dark bg-secondary mb-2">
        <a class="navbar-brand" href="#">BlockBuster</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    @Html.ActionLink("Inicio", "Index", "Peliculas", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Clientes", "Index", "Cliente", null, new { @class = "nav-link" })
                </li>
                <li class="nav-item active">
                    @Html.ActionLink("Alquiler", "Index", "Alquiler", null, new { @class = "nav-link" })
                </li>
            </ul>

            <form class="form-inline my-2 my-lg-0">
                <!-- <input class="form-control mr-sm-2" type="search" placeholder="Buscar" aria-label="Search">-->
                <!--<button class="btn btn-outline-light my-2 my-sm-0" type="submit">Buscar</button>-->
            </form>
        </div>
    </nav>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


    <div class="container-fluid body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>
    <script src="~/vendor/jquery/jquery.min.js"></script>

    <script src="~/vendor/bootstrap/js/bootstrap.bundle.min.js"></script>



</body>
</html>